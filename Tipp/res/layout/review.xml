<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/gsearchtitle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/gsearchtitle1"
        android:layout_toRightOf="@+id/review_rating"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingBottom="13dp"
        android:paddingLeft="7dp"
        android:paddingTop="10dp"
        android:text=""
        android:textColor="#b1689f"
        android:textSize="15dp" />

        <ImageView
            android:id="@+id/review_rating"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:height="1dp"
            android:src="@drawable/ratingfour"
            android:width="1dp" />

        <TextView
            android:id="@+id/gsearchtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/gsearchtitle"
            android:layout_below="@+id/review_rating"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="13dp"
            android:paddingLeft="7dp"
            android:paddingTop="10dp"
            android:text="10:25:91"
            android:textColor="#b1689f"
            android:textSize="10dp" />
   
</RelativeLayout>
  